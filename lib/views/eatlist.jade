extends _layout

block content
    h2 #{tstr}订餐 #{users.length} 人
    +menu(typecat)
    table.table
        tbody
            each user, index in users
                tr
                    td
                        img(src="#{user.headimgurl}")
                        strong  #{user.name || user.nickname}
                        p #{user.country} - #{user.city}

    script.
        function gugu(cat) {
            $.post('./' + cat);
        }

mixin menu(cat)
    ul.nav.nav-pills
        li(class= cat == 'am' && 'active')
            a( href="/z/am") 上午
        li(class= cat == 'am' && 'active')
            a( href="/z/pm") 下午
        li
            a( href="javascript:void gugu('#{cat}');") 咕咕
